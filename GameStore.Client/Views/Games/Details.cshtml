@model GameStore.Client.Models.GameViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}



    <div class="shadow-lg justify-content-center my-0 my-sm-4 container-style bg-light shadow-lg">
        <div class="d-flex flex-wrap flex-md-nowrap">
            <div class="py-3 mr-3 mx-auto mx-sm-auto">
                <img class="w-100 mx-auto d-block" style="min-width: 200px;max-width:300px;" src="@Model.Image" alt="@Model.Name image" />
                <button type="button" class="fas fa-cart-plus btn_buy btn btn-success my-2 w-100 p-2" data-toggle="modal" data-target="#staticBackdrop"> Buy</button>
            </div>
            <div class="container p-3">
                <h1>@Model.Name</h1>
                <p class="my-1"><strong>@Html.DisplayNameFor(model => model.Year): </strong>@Model.Year</p>
                <p class="my-1"><strong>@Html.DisplayNameFor(model => model.Genre): </strong>@Model.Genre</p>
                <p class="my-1"><strong>@Html.DisplayNameFor(model => model.Price): </strong>$@Model.Price</p>
                <p class="my-1"><strong>@Html.DisplayNameFor(model => model.Description): </strong>@Model.Description</p>
            </div>

            <!-- Buy modal window-->
            <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div>
                                <h3 class="modal-title" id="staticBackdropLabel">New purchase</h3>
                                <p>You're buying @Model.Name</p>
                            </div>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body py-0">
                            <form class="form-group" action="~/Purchase/@Model.Id" method="post" name="purchase-form">
                                <input class="form-control my-2" type="text" name="person-name" placeholder="Your name" value="" />
                                <input class="form-control my-2" type="text" name="person-lastname" placeholder="Your lastname" value="" />
                                <input class="form-control my-2" type="email" name="email" value="" placeholder="E-mail" />
                            </form>
                        </div>
                        <div class="modal-footer border-0 pt-0">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="button" form="purchase-form" class="btn btn-primary">Confirm</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>