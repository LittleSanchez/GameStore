
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

    <div class="container bg-light my-4 pb-4 _rnd shadow-lg">
        <div class="d-flex justify-content-between align-items-center px-4 py-2">
            <h2>Genres</h2>
            <a class="btn btn-outline-primary" href="~/Genres/Add">Add</a>
        </div>
        <ul id="archive__list" class="list-group list-unstyled px-4 mb-2">
            @foreach (var item in ViewBag.Genres)
            {
                <li class="list-group-item p-2 d-flex justify-content-between">
                    <h4>@item</h4>
                    <a href="~/Genres/Delete/@item" class="btn btn-outline-danger ml-2">Delete</a>
                </li>
            }
        </ul>
        <div class="d-flex justify-content-between align-items-center px-4 py-2">
            <h2>Developers</h2>
            <a class="btn btn-outline-primary" href="~/Developers/Add">Add</a>
        </div>
        <ul id="archive__list" class="list-group list-unstyled px-4">
            @foreach (var item in ViewBag.Developers)
            {
                <li class="list-group-item p-2 d-flex justify-content-between">
                    <h4>@item</h4>
                    <a href="~/Developers/Delete/@item" class="btn btn-outline-danger ml-2">Delete</a>
                </li>
            }
        </ul>

    </div>